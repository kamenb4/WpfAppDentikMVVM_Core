<Page x:Class="WpfAppDentikMVVM_Core.View.PatientData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppDentikMVVM_Core.View"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1100"
      Title="PatientData">

    <Grid Background="#ffff">
        <StackPanel>
            <TextBlock Text="ФИО" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20 20 20 0" FontSize="30"/>
            <TextBox Width="300" Height="80"/>
            <TextBlock Text="Дата рождения" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20 20 20 0" FontSize="30"/>
            <TextBox Width="300" Height="80"/>
            <TextBlock Text="тест1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20 20 20 0" FontSize="30"/>
            <TextBox Width="300" Height="80"/>
            <TextBlock Text="тест2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20 20 20 0" FontSize="30"/>
            <TextBox x:Name="size" Width="300" Height="80"/>
            <Button Width="300" Content="Well played" Margin="50"/>
            <Button Width="300" Content="Another one" Margin="50 0 50 50"/>
        </StackPanel>
    </Grid>
</Page>

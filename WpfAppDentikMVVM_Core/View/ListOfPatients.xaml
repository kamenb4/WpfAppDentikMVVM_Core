<Page x:Class="WpfAppDentikMVVM_Core.View.ListOfPatients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppDentikMVVM_Core.View"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1100"
      Title="ListOfPatients">

    <Grid Background="#ffff">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <ListView Width="900" Height="600" Margin="50"></ListView>
            
        </StackPanel>
        <Button Grid.Row="1" Content="Новый пациент" VerticalAlignment="Bottom" HorizontalAlignment="Left" MinWidth="500" />
        <Button Grid.Row="1" Content="Поиск" VerticalAlignment="Bottom" HorizontalAlignment="Right" MinWidth="500" Cursor="Hand" />
    </Grid>
</Page>
